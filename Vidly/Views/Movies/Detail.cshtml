@model Vidly.Models.Movie

<h2>@Model.Name</h2>

<ul>
    <li>
        Genre: @Model.Genre
    </li>
    <li>
        Release Date: @Html.DisplayFor(x => x.ReleaseDate)
    </li>
    <li>
        Date Added: @Html.DisplayFor(x => x.AddedDate)
    </li>
    <li>
        Number in Stock: @Model.Stock
    </li>
</ul>
