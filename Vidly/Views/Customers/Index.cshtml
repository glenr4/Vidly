@model IEnumerable<Vidly.Models.Customer>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Customers</h1>
    @if (Model.Count() > 0) {


    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                @*<th scope="col">
                    Discount Rate
                </th>*@
                <th scope="col">
                    Membership Type
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.ActionLink(item.Name, "Edit", "Customers", new { id = item.Id }, null) </td>
                @*<tr class="table-default" onclick="location.href = '@(Url.Action("Details", "Customers", new { id = item.Id }))'">
                    <td>
                        @item.Name
                    </td>*@
                    @*<td>
                        @item.MembershipType.DiscountRate%
                    </td>*@
                    <td>
                        @item.MembershipType.Name
                    </td>
                </tr>
            }            
            </tbody>    
    </table>
    }
    else {
        <p>We currently don't have any customers :(</p>
    }
</body>
</html>
